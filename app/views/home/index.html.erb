  </div>

<!-- Reports -->
    <div class="col-md-6">
    <div class="do-item" style="background-image: url('https://images.unsplash.com/photo-1464958674501-4dc3d73d8f46?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&s=012504555848e4c54c50dfbf26dd857a'); height: 24em; background-size: cover; background-position: center; background-repeat: no-repeat;">  
