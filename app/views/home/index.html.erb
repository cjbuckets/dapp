<div class="row">

  <div class="col-md-6">
    <div class="do-item" style="background-image: url('https://images.unsplash.com/photo-1421091242698-34f6ad7fc088?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&s=cb4a6efe73dc2465a8c57049829b2824'); height: 24em; background-size: cover; background-position: center; background-repeat: no-repeat;"> 
      <div class="do-info-wrap">
        <div class="do-info">
          <div class="do-info-front"></div>
          <div class="do-info-back">
          <h1><%= link_to "Activity", "/activities", class: "btn btn-success" %></h1>
            <div >
            <button type="button" class="btn btn-primary btn-med" data-toggle="modal" data-target="#myModalactivity"> New Activity </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-5">
    </div>
    <div class="col-sm-5">
