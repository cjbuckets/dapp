  </div>

  </div>

</div>
</div>


<!-- levels modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p class="modal-title" id="myModalLabel">Record your blood sugar level.</p>
        </div>
        <div class="modal-body">
          <%= form_tag '/levels', method: :post do %>

      <div>
      <%= label_tag :reading %>
      <%= text_field_tag :reading%>
      </div>

      <div>
      <%= label_tag :date %>
      <%= text_field_tag :date%>
      </div>

      <div>
      <%= label_tag :time %>
      <%= text_field_tag :time%>
      </div>

      <div>
      <%= submit_tag 'SUMBIT' %>
      </div>

    <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- meal modal -->
  <div class="modal fade" id="myModalmeal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p class="modal-title" id="myModalLabel">What did you have to eat?</p>
        </div>
        <div class="modal-body" style= "">
          <%= form_tag '/meals', method: :post do %>

          <div>
          <%= label_tag :meal %>
          <%= text_field_tag :meal%>
          </div>

          <div>
          <%= label_tag :date %>
          <%= text_field_tag :date %>
          </div>

          <div>
          <%= label_tag :carbs %>
          <%= text_field_tag :carbs %>
          </div>

          <div>
          <%= submit_tag 'SUMBIT' %>
          </div>
        <% end %>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </div>
    </div>
  </div>

  <!-- activity modal -->
  <div class="modal fade" id="myModalactivity" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p class="modal-title" id="myModalLabel"> Log your activity.</p>
        </div>
        <div class="modal-body">
          <div class="do-hotstuff">
          <%= form_tag '/activities', method: :post do %>

          <div>
          <%= label_tag :activity %>
          <%= text_field_tag :activity%>
          </div>

          <div>
          <%= label_tag :date %>
          <%= text_field_tag :date%>
          </div>

          <div>
          <%= label_tag :duration %>
          <%= text_field_tag :duration%>
          </div>

          <div>
          <%= submit_tag 'SUMBIT' %>
          </div>

          <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="do-hotstuff">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div> 

