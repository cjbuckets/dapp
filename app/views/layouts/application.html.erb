<!DOCTYPE html>
<html>
<head>
  <title>Dapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

</body>
<% flash.each do |name, message| %>
    <div class="alert alert-<%= name %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%=name.upcase%></strong> <%= message %></div>
  <% end %>
  
  

    <% if user_signed_in? %>
                <li><%= link_to 'Sign Out', '/users/sign_out', method: :delete %></li>
                  <% else %>
                <li><%= link_to 'Sign In', '/users/sign_in' %></li>
                <li><%= link_to 'Sign Up!', '/users/sign_up' %></li>
              <%end%>

     <% if user_signed_in? %>
        <li class="active"><a href="#"><%= current_user.email %><span class="sr-only"></span></a></li>
    <% end %>


</html>
